<!-- guns headshot -->
<append xpath="/progression/perks">
  <perk name="perkGunHeadshotDismember" parent="skillPerceptionCombat" name_key="perkGunHeadshotDismemberName" desc_key="perkGunHeadshotDismemberDesc" icon="ui_game_symbol_stunned">
