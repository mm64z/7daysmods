<configs>
<!--================================== Perception ===============================-->
<!-- perception gives lucky looter -->
  <append xpath="/progression/attributes/attribute[@name='attPerception']">
    <effect_group>
      <passive_effect name="TreasureRadius" level="2,10" value="2,6" operation="base_subtract"/>
      <passive_effect name="LootGamestage" level="2,10" value="10,50" operation="base_add"/>
      <!-- LootGamestage only counts for containers that you open. It does not affect party loot GS. -->
      <passive_effect name="ScavengingTime" level="2,4,6,8,10" value=".1,.2,.4,.6,.8" operation="perc_subtract"/>
    </effect_group>
  </append>
 <set xpath="/progression/attributes/attribute[@name='attPerception']/@desc_key">Perception is the measure of your sensory awareness. Increasing Perception raises the headshot bonus and dismemberment chance with spears, rifles and explosive weapons. Also find better loot, decrease looting time, and find buried treasure more easily.</set>

<!-- move archery to perception -->
  <set xpath="/progression/perks/perk[@name='perkArchery']/@parent">skillPerceptionCombat</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='1']/requirement/@desc_key">reqPerceptionLevel01</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='2']/requirement/@desc_key">reqPerceptionLevel03</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='3']/requirement/@desc_key">reqPerceptionLevel05</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='4']/requirement/@desc_key">reqPerceptionLevel07</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='5']/requirement/@desc_key">reqPerceptionLevel10</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='1']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='2']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='3']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='4']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkArchery']/level_requirements[@level='5']/requirement/@progression_name">attPerception</set>


  <!-- move huntsman to perception -->
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/@parent">skillPerceptionGeneral</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='1']/requirement/@desc_key">reqPerceptionLevel01</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='2']/requirement/@desc_key">reqPerceptionLevel03</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='3']/requirement/@desc_key">reqPerceptionLevel05</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='4']/requirement/@desc_key">reqPerceptionLevel07</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='5']/requirement/@desc_key">reqPerceptionLevel10</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='1']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='2']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='3']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='4']/requirement/@progression_name">attPerception</set>
  <set xpath="/progression/perks/perk[@name='perkTheHuntsman']/level_requirements[@level='5']/requirement/@progression_name">attPerception</set>

<!-- guns headshot -->
<append xpath="/progression/perks">
  <perk name="perkGunHeadshotDismember" parent="skillPerceptionCombat" name_key="Boom Headshot" desc_key="Headshots do 20% increased damage per level" icon="ui_game_symbol_stunned">
    <level_requirements level="1"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="1" desc_key="reqPerceptionLevel01"/></level_requirements>
    <level_requirements level="2"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="3" desc_key="reqPerceptionLevel03"/></level_requirements>
    <level_requirements level="3"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="5" desc_key="reqPerceptionLevel05"/></level_requirements>
    <level_requirements level="4"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="7" desc_key="reqPerceptionLevel07"/></level_requirements>
    <level_requirements level="5"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="10" desc_key="reqPerceptionLevel10"/></level_requirements>
    <effect_group>
      <requirement name="ItemHasTags" tags="ranged"/>
      <passive_effect name="DamageModifier" operation="perc_add" level="1,5" value="0.2,1" tags="head"/>
      <effect_description desc_base="Kiss of the lips" level="1" long_desc_key="Increase headshot damage by 20%"/>
      <effect_description desc_base="Forehead Tap" level="2" long_desc_key="Increase headshot damage by 40%"/>
      <effect_description desc_base="Between the Eyes" level="3" long_desc_key="Increase headshot damage by 60%"/>
      <effect_description desc_base="On the Nose" level="4" long_desc_key="Increase headshot damage by 80%"/>
      <effect_description desc_base="Crowned" level="5" long_desc_key="Increase headshot damage by 100%"/>
    </effect_group>
  </perk>
</append>

<!-- increased ranged cripple -->
<append xpath="/progression/perks">
  <perk name="perkRangedCripple" parent="skillPerceptionCombat" name_key="Fuck Kneecaps" desc_key="Leg shots have a 20% chance per level to cripple" icon="ui_game_symbol_brokenbone">
    <level_requirements level="1"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="1" desc_key="reqPerceptionLevel01"/></level_requirements>
    <level_requirements level="2"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="3" desc_key="reqPerceptionLevel03"/></level_requirements>
    <level_requirements level="3"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="5" desc_key="reqPerceptionLevel05"/></level_requirements>
    <level_requirements level="4"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="7" desc_key="reqPerceptionLevel07"/></level_requirements>
    <level_requirements level="5"><requirement name="ProgressionLevel" progression_name="attPerception" operation="GTE" value="10" desc_key="reqPerceptionLevel10"/></level_requirements>
    <effect_group>
      <requirement name="ItemHasTags" tags="ranged"/>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryCrippled01" target="other" target_tags="zombie">
	<requirement name="ProgressionLevel" value="1" operation="Equals" progression_name="perkRangedCripple"/>
	<requirement name="RandomRoll" value="20" operation="LTE" min_max="0,100" seed_type="Random"/>
	<requirement name="HitLocation" body_parts="LeftUpperLeg,RightUpperLeg,LeftLowerLeg,RightLowerLeg"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryCrippled01" target="other" target_tags="zombie">
	<requirement name="ProgressionLevel" value="2" operation="Equals" progression_name="perkRangedCripple"/>
	<requirement name="RandomRoll" value="40" operation="LTE" min_max="0,100" seed_type="Random"/>
	<requirement name="HitLocation" body_parts="LeftUpperLeg,RightUpperLeg,LeftLowerLeg,RightLowerLeg"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryCrippled01" target="other" target_tags="zombie">
	<requirement name="ProgressionLevel" value="3" operation="Equals" progression_name="perkRangedCripple"/>
	<requirement name="RandomRoll" value="60" operation="LTE" min_max="0,100" seed_type="Random"/>
	<requirement name="HitLocation" body_parts="LeftUpperLeg,RightUpperLeg,LeftLowerLeg,RightLowerLeg"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryCrippled01" target="other" target_tags="zombie">
	<requirement name="ProgressionLevel" value="4" operation="Equals" progression_name="perkRangedCripple"/>
	<requirement name="RandomRoll" value="80" operation="LTE" min_max="0,100" seed_type="Random"/>
	<requirement name="HitLocation" body_parts="LeftUpperLeg,RightUpperLeg,LeftLowerLeg,RightLowerLeg"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryCrippled01" target="other" target_tags="zombie">
	<requirement name="ProgressionLevel" value="5" operation="Equals" progression_name="perkRangedCripple"/>
	<requirement name="RandomRoll" value="100" operation="LTE" min_max="0,100" seed_type="Random"/>
	<requirement name="HitLocation" body_parts="LeftUpperLeg,RightUpperLeg,LeftLowerLeg,RightLowerLeg"/>
      </triggered_effect>
      <effect_description desc_base="Pulled Hamstring" level="1" long_desc_key="20% chance to cripple with a ranged attack to the legs"/>
      <effect_description desc_base="Charlie Horse" level="2" long_desc_key="40% chance to cripple with a ranged attack to the legs"/>
      <effect_description desc_base="Hole in the Foot" level="3" long_desc_key="60% chance to cripple with a ranged attack to the legs"/>
      <effect_description desc_base="Kneecapped" level="4" long_desc_key="80% chance to cripple with a ranged attack to the legs"/>
      <effect_description desc_base="Achilles Tendon" level="5" long_desc_key="100% chance to cripple with a ranged attack to the legs"/>
    </effect_group>
  </perk>
</append>


  <remove xpath="/progression/perks/perk[@name='perkLuckyLooter']"/>
  <remove xpath="/progression/perks/perk[@name='perkSalvageOperations']"/>

 
</configs>

