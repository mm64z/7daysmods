<configs>



<!--====================================== Agility ===================================-->
  <!-- agility gives melee and reload speed -->
  <append xpath="/progression/attributes/attribute[@name='attAgility']">
    <effect_group>
        <passive_effect name="AttacksPerMinute" operation="perc_add" level="1,10" value="0.02,0.2"/>
        <passive_effect name="ReloadSpeedMultiplier" operation="perc_add" level="1,10" value="0.02,0.2" tags="deployed" invert_tag_check="true"/>
    </effect_group>
  </append>
    
<!-- Move Cardio to Agility -->
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/@parent">skillAthletics</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='1']/requirement/@desc_key">reqAgilityLevel01</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='2']/requirement/@desc_key">reqAgilityLevel03</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='3']/requirement/@desc_key">reqAgilityLevel05</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='4']/requirement/@desc_key">reqAgilityLevel07</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='5']/requirement/@desc_key">reqAgilityLevel10</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='1']/requirement/@progression_name">attAgility</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='2']/requirement/@progression_name">attAgility</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='3']/requirement/@progression_name">attAgility</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='4']/requirement/@progression_name">attAgility</set>
  <set xpath="/progression/perks/perk[@name='perkRuleOneCardio']/level_requirements[@level='5']/requirement/@progression_name">attAgility</set>

