<configs>



<!--================================= Strength ==================================================-->

 <!-- merge pummel pete, brawler, skull crusher -->
 <set xpath="/progression/perks/perk[@name='perkPummelPete']@desc_key">Specialize in destroying enemies with clubs, sledgehammers, and knuckles</set>
  <append xpath="/progression/perks/perk[@name='perkPummelPete']">
    <effect_group>
      <requirement name="ItemHasTags" tags="perkBrawler"/>
      <passive_effect name="BlockDamage" level="1,5" value=".2,1" operation="perc_add"/>
      <passive_effect name="EntityDamage" level="1,5" value=".1,.5" operation="perc_add"/>
      <passive_effect name="DismemberChance" level="5" value=".2" operation="base_add" tags="head"/>
    </effect_group>
    <effect_group>
      <requirement name="ItemHasTags" tags="perkBrawler"/>
      <requirement name="HitLocation" body_parts="Head"/>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffBrawlerNoTeeth" target="other" target_tags="zombie,animal">
	<requirement name="ProgressionLevel" value="1" operation="GTE" progression_name="perkBrawler"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryStunned00" target="other" target_tags="zombie,animal">
	<requirement name="ProgressionLevel" value="2" operation="GTE" progression_name="perkBrawler"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown01" target="other">
	<requirement name="ProgressionLevel" value="3" operation="Equals" progression_name="perkBrawler"/>
	<requirement name="RandomRoll" value="20" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown01" target="other">
	<requirement name="ProgressionLevel" value="4" operation="GTE" progression_name="perkBrawler"/>
	<requirement name="RandomRoll" value="40" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
    </effect_group>
    <effect_group>
      <passive_effect name="CraftingTier" level="1,2,3,4,5" value="1,2,3,4,4" operation="base_add" tags="perkBrawler"/>
      <passive_effect name="RecipeTagUnlocked" level="1,5" value="1" operation="base_set" tags="meleeKnucklesIron"/>
    </effect_group>
    <effect_group>
      <passive_effect name="CraftingTier" level="1,2,3,4,5" value="1,2,3,4,4" operation="base_add" tags="perkSkullCrusher"/>
      <passive_effect name="RecipeTagUnlocked" level="1,5" value="1" operation="base_set" tags="meleeToolSledgehammerIron"/>
    </effect_group>
    <effect_group>
      <requirement name="ItemHasTags" tags="perkSkullCrusher"/>
      <passive_effect name="BlockDamage" level="1,5" value=".2,1" operation="perc_add"/>
      <passive_effect name="EntityDamage" level="1,5" value=".1,.5" operation="perc_add"/>
    </effect_group>
    <effect_group>
      <requirement name="ItemHasTags" tags="perkSkullCrusher"/>
      <requirement name="CVarCompare" value="1" operation="Equals" cvar="_stunned" target="other"/>
      <passive_effect name="EntityDamage" level="1,5" value="0.4,2" operation="perc_add" tags="secondary"/>
    </effect_group>
    <effect_group>
      <requirement name="ItemHasTags" tags="perkSkullCrusher"/>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown01" target="other">
	<requirement name="ProgressionLevel" value="1" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="20" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown01" target="other">
	<requirement name="ProgressionLevel" value="2" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="30" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown02" target="other">
	<requirement name="ProgressionLevel" value="3" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="40" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown02" target="other">
	<requirement name="ProgressionLevel" value="4" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="60" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfAttackedOther" buff="buffInjuryKnockdown02" target="other">
	<requirement name="ProgressionLevel" value="5" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="100" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfSecondaryActionRayHit" buff="buffInjuryKnockdown01" target="otherAOE" target_tags="zombie,animal" range="1.3">
	<requirement name="ProgressionLevel" value="3" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="20" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfSecondaryActionRayHit" buff="buffInjuryKnockdown01" target="otherAOE" target_tags="zombie,animal" range="1.3">
	<requirement name="ProgressionLevel" value="4" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="40" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
      <triggered_effect action="AddBuff" trigger="onSelfSecondaryActionRayHit" buff="buffInjuryKnockdown01" target="otherAOE" target_tags="zombie,animal" range="1.4">
	<requirement name="ProgressionLevel" value="5" operation="Equals" progression_name="perkSkullCrusher"/>
	<requirement name="RandomRoll" value="60" operation="LTE" min_max="0,100" seed_type="Random"/>
      </triggered_effect>
    </effect_group>
  </append>


  <!-- strength dismember chance perk -->
  <append xpath="/progression/perks">
    <perk name="perkMeleeDismember" parent="skillStrengthCombat" name_key="Break It Up" desc_key="Increase chance to dismember by 10% per level" icon="ui_game_symbol_sneak_attack">
      <level_requirements level="1"><requirement name="ProgressionLevel" progression_name="attStrength" operation="GTE" value="1" desc_key="reqStrengthLevel01"/></level_requirements>
      <level_requirements level="2"><requirement name="ProgressionLevel" progression_name="attStrength" operation="GTE" value="3" desc_key="reqStrengthLevel03"/></level_requirements>
      <level_requirements level="3"><requirement name="ProgressionLevel" progression_name="attStrength" operation="GTE" value="5" desc_key="reqStrengthLevel05"/></level_requirements>
      <level_requirements level="4"><requirement name="ProgressionLevel" progression_name="attStrength" operation="GTE" value="7" desc_key="reqStrengthLevel07"/></level_requirements>
      <level_requirements level="5"><requirement name="ProgressionLevel" progression_name="attStrength" operation="GTE" value="10" desc_key="reqStrengthLevel10"/></level_requirements>
      <effect_group>
	<requirement name="ItemHasTags" tags="melee"/>
   	<passive_effect name="DismemberChance" operation="base_add" level="1,5" value=".1,.5" tags="head,arm,leg"/>
	<effect_description desc_base="Ch" level="1" long_desc_key="10% chance to dismember with a melee strike"/>
	<effect_description desc_base="Chop" level="2" long_desc_key="20% chance to dismember with a melee strike"/>
	<effect_description desc_base="Chop chop" level="3" long_desc_key="30% chance to dismember with a melee strike"/>
	<effect_description desc_base="Chop chop chop" level="4" long_desc_key="40% chance to dismember with a melee strike"/>
	<effect_description desc_base="Biggest chop" level="5" long_desc_key="50% chance to dismember with a melee strike"/>
      </effect_group>
    </perk>
  </append>

  <!-- strength melee damage perk -->
  <append xpath="/progression/perks">
