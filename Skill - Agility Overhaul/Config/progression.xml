<configs>

<!--====================================== Agility ===================================-->

<!-- add flurry of blows, huntsman, lockpicking -->

<!-- readd flurry of blows -->
  <append xpath="/progression/perks">
    <perk name="perkFlurryOfBlows" max_level="3" parent="skillAgilityAthletics" name_key="perkFlurryOfBlowsName" desc_key="perkFlurryOfBlowsDesc" icon="ui_game_symbol_knunchuck"> -->
      <level_requirements level="1"><requirement name="ProgressionLevel" progression_name="attAgility" operation="GTE" value="1" desc_key="reqAgilityLevel01"/></level_requirements>
      <level_requirements level="2"><requirement name="ProgressionLevel" progression_name="attAgility" operation="GTE" value="4" desc_key="reqAgilityLevel04"/></level_requirements>
      <level_requirements level="3"><requirement name="ProgressionLevel" progression_name="attAgility" operation="GTE" value="7" desc_key="reqAgilityLevel07"/></level_requirements>

      <effect_group>
          <passive_effect name="AttacksPerMinute" operation="perc_add" level="1,2,3" value=".1,.17,.25" tags="perkFlurryOfBlows"/>
      </effect_group>

      <effect_group>
        <requirement name="HoldingItemHasTags" tags="perkFlurryOfBlows"/>
        <requirement name="ProgressionLevel" progression_name="perkFlurryOfBlows" operation="Equals" value="3"/>
          <triggered_effect trigger="onSelfKilledOther" action="ModifyStats" stat="Stamina" operation="add" value="30" delay="1.0"/>

        <effect_description level="1" desc_key="perkFlurryOfBlowsRank1Desc" long_desc_key="perkFlurryOfBlowsRank1LongDesc"/>
        <effect_description level="2" desc_key="perkFlurryOfBlowsRank2Desc" long_desc_key="perkFlurryOfBlowsRank2LongDesc"/>
        <effect_description level="3" desc_key="perkFlurryOfBlowsRank3Desc" long_desc_key="perkFlurryOfBlowsRank3LongDesc"/>
      </effect_group>
    </perk>
  </append>
  <csv xpath="/items/item/property[@name='Tags' and contains(@value, 'perkFlurryOfAgility')]/@value" op="add">perkFlurryOfBlows</csv>
  <csv xpath="/items/item/property[@name='Tags' and contains(@value, 'perkFlurryOfPerception')]/@value" op="add">perkFlurryOfBlows</csv>
  <csv xpath="/items/item/property[@name='Tags' and contains(@value, 'perkFlurryOfStrength')]/@value" op="add">perkFlurryOfBlows</csv>
  <csv xpath="/items/item/property[@name='Tags' and contains(@value, 'perkFlurryOfFortitude')]/@value" op="add">perkFlurryOfBlows</csv>
  <csv xpath="/items/item/property[@name='Tags' and contains(@value, 'perkFlurryOfIntellect')]/@value" op="add">perkFlurryOfBlows</csv>
  <remove xpath="/perks/perk[@name='perkFlurryOfAgility']"/>
  <remove xpath="/perks/perk[@name='perkFlurryOfPerception']"/>
  <remove xpath="/perks/perk[@name='perkFlurryOfStrength']"/>
  <remove xpath="/perks/perk[@name='perkFlurryOfFortitude']"/>
  <remove xpath="/perks/perk[@name='perkFlurryOfIntellect']"/>

