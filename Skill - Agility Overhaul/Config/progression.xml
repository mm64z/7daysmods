<!-- merge Parkour and Run and Gun -->
 <set xpath="/progression/perks/perk[@name='perkParkour']@desc_key">Increase athletic ability to move faster while reloading, jump higher, and be more accurate when shooting from the hip</set>
  <append xpath="/progression/perks/perk[@name='perkParkour']">
    <effect_group>
      <requirement name="ItemHasTags" tags="ranged"/>
      <requirement name="!ItemHasTags" tags="shotgun"/>
      <passive_effect name="SpreadMultiplierHip" operation="perc_add" level="0,5" value="0,-.25"/>
    </effect_group>
  </append>



  <remove xpath="/progression/perks/perk[@name='perkRunAndGun']"/>

